.swiper-container{
  height: 200px;
  text-align: center;
}

.swiper-container .item{
  height: 100%;
  line-height: 150px;
}

swiper-item:nth-child(1){
  background-color: yellow;
}

swiper-item:nth-child(2){
  background-color: blueviolet;
}

swiper-item:nth-child(3){
  background-color: green;
}